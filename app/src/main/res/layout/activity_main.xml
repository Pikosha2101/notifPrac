<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/butAdd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Простое уведомление"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/butDel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Удалить уведомление"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butAdd" />

    <Button
        android:id="@+id/butBrowser"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Браузер"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butDel" />

    <Button
        android:id="@+id/butComplex"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Сложное уведомление"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butBrowser" />
</androidx.constraintlayout.widget.ConstraintLayout>